{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES6"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2020",
    "typeRoots": ["typings/"]
  },
  "include": ["src/", "typings/"]
}
